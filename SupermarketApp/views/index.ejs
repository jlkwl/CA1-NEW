<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">

  <title>Supermarket App</title>
</head>

<body>
  <!-- NAVBAR -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <% if (!user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- MAIN CONTENT -->
  <div class="container mt-4 text-center">

      <!-- MAIN IMAGE -->
      <img src="/ui/register.jpg" class="home-image" alt="Supermarket app welcome image">

      <div class="mt-4">

        <% if (user) { %>
          <% if (user.role === "admin") { %>
            <p>Back to <a href="/inventory">inventory</a>!</p>
          <% } else { %>
            <p>Continue <a href="/shopping">shopping</a>!</p>
          <% } %>
        <% } else { %>
          <p>
            Welcome to the Supermarket App! <br>
            Please <a href="/login">login</a> to continue.
          </p>
        <% } %>

      </div>
  </div>

</body>
</html>
